<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/defaultRow"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Khán giả bình chọn"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginBottom="24dp"/>

    <!-- Chart area -->
    <LinearLayout
        android:id="@+id/chartLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:gravity="bottom|center"
        android:layout_marginBottom="24dp">

        <!-- Cột A -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom|center"
            android:orientation="vertical">

            <TextView android:id="@+id/percentA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:gravity="center" />

            <View
                android:id="@+id/barA"
                android:layout_width="40dp"
                android:layout_height="0dp"
                android:background="@color/yellow"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A"
                android:textColor="@color/white"
                android:layout_marginTop="4dp"
                android:gravity="center"/>
        </LinearLayout>

        <!-- Lặp lại B, C, D tương tự -->
        <!-- Cột B -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom|center"
            android:orientation="vertical">

            <TextView android:id="@+id/percentB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:gravity="center" />

            <View
                android:id="@+id/barB"
                android:layout_width="40dp"
                android:layout_height="0dp"
                android:background="@color/yellow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B"
                android:textColor="@color/white"
                android:layout_marginTop="4dp"
                android:gravity="center"/>
        </LinearLayout>

        <!-- C -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom|center"
            android:orientation="vertical">

            <TextView android:id="@+id/percentC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:gravity="center" />

            <View
                android:id="@+id/barC"
                android:layout_width="40dp"
                android:layout_height="0dp"
                android:background="@color/yellow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C"
                android:textColor="@color/white"
                android:layout_marginTop="4dp"
                android:gravity="center"/>
        </LinearLayout>

        <!-- D -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom|center"
            android:orientation="vertical">

            <TextView android:id="@+id/percentD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:gravity="center" />

            <View
                android:id="@+id/barD"
                android:layout_width="40dp"
                android:layout_height="0dp"
                android:background="@color/yellow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D"
                android:textColor="@color/white"
                android:layout_marginTop="4dp"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
