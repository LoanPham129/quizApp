<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.QuizApp_main"
        tools:targetApi="31">
        <activity
            android:name=".screen.ResultActivity"
            android:exported="false" />
        <activity
            android:name=".screen.BasicQuiz"
            android:exported="false" />
        <activity
            android:name=".screen.MainActivity"
            android:exported="false" />
        <activity android:name="screen.RankingActivity">
            <!-- Bạn có thể thêm các thuộc tính như theme, intent-filter tùy vào yêu cầu -->
        </activity>
        <activity
            android:name=".screen.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>